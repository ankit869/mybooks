<body>
    <br>

    <section id="login-section">
        <div id="login">
            <div id="log-img1">
              <i class="fas fa-key fa-10x"></i>
            </div>
           <div id="login-form">
                <h1 class="font-design-h"><i class="fas fa-redo-alt"></i> Reset</h1>
                <hr>
                <p id="login-msg"><%=message%></p>
                <form id="log-form" class="reset-form" action="/reset" method="post">
                  <input name="username" type="email" id="reset_emailInput" placeholder="Enter your email" value="<%=username%>" required>
                  <button type="button" onclick="sendotp()" id="otp-btn">Send OTP</button>
                  <input name="otp" id="reset_opt" type="Number" placeholder="Enter your OTP" value="" required disabled>
                  <input name="newpassword" id="reset_password" type="text" placeholder="Enter your new password" value="" required disabled>
                  <button class="font-design-b" id="reset-send" disabled>Reset</button>
                    
                </form>
            </div>
            <div id="log-img2">
                <i class="fas fa-unlock-alt fa-10x"></i>
            </div>
        </div>
        
    </section>
    <br><br>
    <section id="help">
        <button class="font-design-b" id="f-btn" onclick="showfeed()"><i class="fas fa-pen"></i> feedback</button>
        <div>
          <form class="submitfd" id="feedback">
              <p class="font-design-p">Help us to imrove our site</p>
              <hr>
              <textarea name="text" id="feedtxt" cols="6" rows="6" placeholder="Type here" required></textarea>
              <button class="font-design-b feed-btn" id="fd" type="submit">submit</button>
              <hr>
              <br>
          </form>
        </div>
    </section>
   
