<body>
    <br>
    <main_body class="main_signup">
      <section id="login-section">
        <div id="login">
            <div id="log-img1">
              <i class="fas fa-key fa-10x"></i>
            </div>
           <div id="login-form">
                <h1 class="font-design-h"><i class="fas fa-sign-in-alt"></i> SignUp</h1>
                <hr>
                <p id="login-msg"><%=message%></p>
                <form id="log-form"  class="signup-form" action="/signup" method="post">
                   <input name="name" type="text" placeholder="Enter your name" required>
                   <input name="username" type="email" placeholder="Enter your email" required>
                   <input name="password" type="password" placeholder="Enter your password" required>
                   <input name="referral" type="text" value='<%=referral%>' hidden>
                   <button class="font-design-b" id="signup-send">&nbsp;SignUp&nbsp;</button>
                   <p>Or</p>
                </form>
                
                <div id="l-signin" style="display:flex">
                    <div id="l-btn">
                        <button onclick="location.href='/login'" class="font-design-b" id="signup-send">Login</button>
                        <button onclick="location.href='/auth/google'" class="font-design-b" id="gsignup-send"><i class="fab fa-google"></i> SignIn</button>
                   </div>
                </div>
            </div>
            <div id="log-img2">
                <i class="fas fa-unlock-alt fa-10x"></i>
            </div>
        </div>
        
      </section>
      <br><br>
      <section id="help">
          <button class="font-design-b" id="f-btn" onclick="showfeed()"><i class="fas fa-pen"></i> feedback</button>
          <div>
            <form class="submitfd" id="feedback">
                <p class="font-design-p">Help us to imrove our site</p>
                <hr>
                <textarea name="text" id="feedtxt" cols="6" rows="6" placeholder="Type here" required></textarea>
                <button class="font-design-b feed-btn" id="fd" type="submit">submit</button>
                <hr>
                <br>
            </form>
          </div>
      </section>
    </main_body>
    
