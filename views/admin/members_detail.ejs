            @media(max-height:840px){
                 footer{
                  text-align: center;
                  background: none;
                  position: relative;
                  bottom:-15px;
                  width: 100%;
                }
            }
        </style>-->
    <% } else {%>

    <% members.forEach((user)=>{ %> 
    <div id="user_details" class="<%=user.id%>" style="position:relative;">
    <% if(!user.ismember){ %>
         <button class="member_btn" onclick="addmember('<%=user.id%>')" style="position:absolute;margin-top:-20px;margin-left:-10px;border-radius:10px;border:none;font-size:22px;"><i class="fas fa-user-plus"></i></button>
    <% } else { %>
         <button class="member_btn" onclick="removemember('<%=user.id%>','<%=user.unicode%>')" style="position:absolute;margin-top:-20px;margin-left:-10px;border-radius:10px;border:none;font-size:22px;"><i class="fas fa-user-minus"></i></button>
    <% } %>
    <% if(user.api_key!=null){ %>
        <div class="user_api_status">
            <% if(user.api_status){ %>
                <code>Books API is enabled</code>
            <% }else{ %>
                <code>Books API is disabled</code>
            <% } %>
            <code><%= user.api_requests %> requests</code>
        </div>
        <div class="details" style="margin-top:18px;">
    <% } else { %>
        <div class="details">
    <% } %>
            <img src="<%=user.userimage%>" alt="">
            <div style="margin-top:10px;" class="usrdetail">
                <h3 style="color:#6083e4;display:inline-block"><%=user.name%></h3>
                <% if(user.unicode) { %>
                    <span>&nbsp;&nbsp;( Admin )</span>
                <% } else if(user.ismember) { %>
                    <span>&nbsp;&nbsp;( member )</span>
                <% } %>
                <p class="dont-break-out"><i style="color:#6083e4;" class="fas fa-envelope"></i>&nbsp; <%=user.username%></p> 
            </div>
        </div>
        <hr>
        <div class="stats">
            <div style="display: inline-block"> 
                <p class="credits"><img src="/images/coin.png" alt=""><%=user.credits%> credits</p> 
            </div>
            <div style="display: inline-block"> 
                <p><img src="/images/upload.png" alt=""><%=user.booksUploaded%> books</p>
            </div>
            <div style="display: inline-block"> 
                <p><img src="/images/referrals.png" alt=""><%=user.refferals%> referrals</p>
            </div>
            <% if(user.unicode) { %>
            <div style="display: inline-block"> 
                <p><img src="/images/reply.png" alt=""><%=user.q_resolved%> query</p>
            </div>
            <% } %>
        </div>
        <div align="center" class="user_referral_link">
            <a  style="font-size:20px;color:#6083e4;cursor:pointer;" onclick="copy_referral('<%=user.id%>')"><i class="fas fa-link"></i> Referral link</a>
        </div>
        <br>
        <div style="display:flex" >
            <% if((user.unicode || user.ismember)&&(currentAdmin=="ankitkohli181@gmail.com" || currentAdmin=="ankitkholi2002@gmail.com" || currentAdmin=="mybooks.webmaster@gmail.com")){ %>
                <div id="help" class="editCredits">
                    <button class="font-design-b" id="f-btn" onclick="showcredit('<%=user.id%>')"><i class="fas fa-edit"></i> Edit user</button>
                    <div class="submitusr">
                    <form  onsubmit="event.preventDefault(); return submitusr('<%=user.id%>');" id="feedback">
                        
                        <p class="font-design-p">Edit credits</p>
                        <hr>
                        <input name="name" value="<%=user.name%>" hidden></input>
                        <input name="userid" value="<%=user.id%>" hidden></input>
                        <input name="username" value="<%=user.username%>" hidden></input>
                        <input style="transform:scale(1.05);padding:5px;padding-left:8px;border-radius:8px;" type="number"  value="<%=user.credits%>" style="margin:10px;border-radius: 15px;outline:none;padding:10px;background-color: #fafaff;border:none;" name="credits" id="feedtxt"  placeholder="Enter  credits " required></input><br>
                        <button style="transform:scale(1.1);" class="font-design-b feed-btn" id="fd" type="submit">&nbsp;Update&nbsp;</button>
                            <br>
                        <hr>
                    </form>
                    </div>
                </div>
            <% } %>
            <div id="help" class="sendMsg">
                <button class="font-design-b" id="f-btn" onclick="shownotify('<%=user.id%>')"><i class="far fa-comment-dots"></i> Message  </button>
                <div class="submitusr">
                <form onsubmit="event.preventDefault(); return submitmsg('<%=user.id%>');" id="feedback">
                    <p class="font-design-p">Send a message to <%=user.name%></p>
                    <hr>
                    <input name="name" value="<%=user.name%>" hidden></input>
                    <input name="userid" value="<%=user.id%>" hidden></input>
                    <input name="username" value="<%=user.username%>" hidden></input>
                    <textarea style="transform:scale(1.05);font-size:20px;padding:5px;padding-left:8px;border-radius:8px;"  style="margin:10px;border-radius: 15px;outline:none;padding:10px;background-color: #fafaff;border:none;" name="message" id="feedtxt"  rows="5" placeholder="Write a message " required></textarea><br>
                    <button style="transform:scale(1.1);" class="font-design-b feed-btn" id="fd" type="submit">&nbsp;Send&nbsp;</button>
                        <br>
                    <hr>
                </form>
                </div>
            </div>
        </div>
        
    </div>
    <% }) %>

    <% } %>
    </div>

    <div class="roll_animation" style="display: none">
        <div class="lds-roller" align="center" style="transform:scale(0.65);"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
    </div> 
    <div id="snackbar">Successfully updated the credits</div>
