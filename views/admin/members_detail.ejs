                                        <input name="name" value="${user.name}" hidden></input>
                                        <input name="userid" value="${user._id}" hidden></input>
                                        <input name="username" value="${user.username}" hidden></input>
                                        <input style="transform:scale(1.05);padding:5px;padding-left:8px;border-radius:8px;" type="number"  value="${user.credits}" style="margin:10px;border-radius: 15px;outline:none;padding:10px;background-color: #fafaff;border:none;" name="credits" id="feedtxt"  placeholder="Enter  credits " required></input><br>
                                        <button style="transform:scale(1.1);" class="font-design-b feed-btn" id="fd" type="submit">&nbsp;Update&nbsp;</button>
                                            <br>
                                        <hr>
                                    </form>
                                    </div>
                                </div>`
                            }
                                string+=`
                                <div id="help" class="sendMsg">
                                    <button class="font-design-b" id="f-btn" onclick="shownotify('${user._id}')"><i class="far fa-comment-dots"></i> Message  </button>
                                    <div class="submitusr">
                                    <form onsubmit="event.preventDefault(); return submitmsg('${user._id}');" id="feedback">
                                        <p class="font-design-p">Send a message to ${user.name}</p>
                                        <hr>
                                        <input name="name" value="${user.name}" hidden></input>
                                        <input name="userid" value="${user._id}" hidden></input>
                                        <input name="username" value="${user.username}" hidden></input>
                                        <textarea style="transform:scale(1.05);font-size:20px;padding:5px;padding-left:8px;border-radius:8px;"  style="margin:10px;border-radius: 15px;outline:none;padding:10px;background-color: #fafaff;border:none;" name="message" id="feedtxt"  rows="5" placeholder="Write a message " required></textarea><br>
                                        <button style="transform:scale(1.1);" class="font-design-b feed-btn" id="fd" type="submit">&nbsp;Send&nbsp;</button>
                                            <br>
                                        <hr>
                                    </form>
                                    </div>
                                 </div>
                            </div>`
                            
                            string+=`</div>`;
                    })
                    isgot=true;
                    $("#members").append(string)
                        
                }
                $(".roll_animation").css("display","none")

            }
            
        });
        }
        window.addEventListener('scroll',()=>{
            const {scrollHeight,scrollTop,clientHeight}=document.documentElement;
            if(scrollTop+clientHeight+250>=scrollHeight){
                if(isgot){
                   isgot=false;
                   $(".roll_animation").css("display","block")
                   get_more() 
                }
            }
        })
